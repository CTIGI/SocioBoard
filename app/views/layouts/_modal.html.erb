<div class="modal fade" id="generic-modal" data-backdrop="static" data-keyboard="false" role="dialog" aria-hidden="true" style="display: none;">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"></h4>
      </div>

      <div class="modal-body">
      </div>

      <div class="modal-footer">
        <hr>
        <%= link_to "", class: "btn btn-success btn-icon", id: submit_id do %>
          <%= fa_icon("check") %>
        <% end %>
        <%= link_to "", class: "btn btn-danger btn-icon", id: "btn-close-modal", data: { dismiss: "modal" } do %>
          <%= fa_icon("close") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
