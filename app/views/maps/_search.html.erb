<%= link_to "#", class: "btn btn-success open-search" do %>
  <%= fa_icon("filter")%> <%= t("app.filter") %>
<% end %>

<%= link_to root_path, class: "logo-socioboard" do %>
  <%= image_tag "socioboard-logo.png", width: "100px" %>
<% end %>

<div class="loading-map-data text-center">
  <div class="loading-map-content">
    <%= fa_icon("circle-o-notch spin") %>
    <div class="">
      <%= t("app.please_wait") %>
    </div>
  </div>
</div>

<div class="map-search row">

  <div class="col-md-12 text-right interactive-header">
    <span class="close-search">
      <%= fa_icon "times-circle-o" %>
    </span>
  </div>

  <%= search_form_for @q, url: maps_path do |f| %>
    <div class="row">
      <div class="col-md-12 text-center p-t-20">
        <span>
          <%= link_to "#", id: "search-on-map", class: "btn btn-success btn-icon" do %>
            <%= fa_icon("search") %>
          <% end %>
        </span>
        <span class="m-l-10">
          <%= link_to "#", id: "clear-search", class: "btn bg-gray btn-icon" do %>
            <%= fa_icon("close") %>
          <% end %>
        </span>
        <hr>
      </div>
    </div>
    <div class="form-components">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :id, t('views.maps.unit') %>
          <%= f.select(:unit_id_in, grouped_options_for_select(@units), { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple", data: { value: value_selected("q", "unit_id_in") } }) %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :origin_county_in, t('views.maps.origin_county') %>
          <%= f.select(:origin_county_in, @origin_counties, { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple" }) %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :crimes_name_in, t('views.maps.crimes_name') %>
          <%= f.collection_select(:crimes_name_in, @crimes, :name, :name, { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple" }) %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :measures_measure_type_in, t('views.maps.measure_type') %>
          <%= f.select(:measures_measure_type_in, @measure_types, { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple" }) %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :age_in, t('views.maps.age') %>
          <%= f.collection_select(:age_in, @ages, :age, :age, { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple" }) %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :recurrent_in, t('views.maps.recurrent') %>
          <%= f.collection_select(:recurrent_in, @recurrents, :recurrent, :recurrent, { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple" }) %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :measures_measure_situation_in, t('views.maps.measure_situation') %>
          <%= f.select(:measures_measure_situation_in, @measure_situations, { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple" }) %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :has_biometry_eq, t('views.maps.has_biometry') %>
          <%= f.select :has_biometry_eq, @yes_or_no, { include_blank: true },{ class: "select2 form-control medium-select2" } %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :has_photo_eq, t('views.maps.has_photo') %>
          <%= f.select :has_photo_eq, @yes_or_no, { include_blank: true }, { class: "select2 form-control medium-select2" } %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :measures_measure_deadline_in, t('views.maps.measure_deadline') %>
          <%= f.select(:measures_measure_deadline_in, @measure_deadlines, { include_blank: false }, { class: "select2 form-control medium-select2", multiple: "multiple" }) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
