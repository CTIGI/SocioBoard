<p id="notice"><%= notice %></p>
<div class="container overflow-visible">
  <div class="tile">
    <div class="t-header th-alt bg-teal">
      <div class="th-title">
        <span class="tile-text"><%= t("views.roles.list_roles")%></span>
      </div>
    </div>
    <table class="table table-stripped">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.role.name") %></th>
          <th><%= t("activerecord.attributes.role.created_at") %></th>
          <th><%= t("activerecord.attributes.role.updated_at") %></th>
          <th><%= t("views.general.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= role.created_at %></td>
          <td><%= role.updated_at %></td>
          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-success dropdown-toggle"  data-toggle="dropdown" aria-expanded="false">
                <%= fa_icon("ellipsis-h") %>
              </button>
              <ul class="dropdown-menu dropdown-menu-right" data-placement="left" role="menu">
                <li>
                  <%= link_to t("link.show"), role %>
                </li>
                <li>
                  <%= link_to t("link.edit"), edit_role_path(role) %>
                </li>
                <li>
                  <%= link_to t("link.delete"), role, method: :delete, data: { confirm: 'Are you sure?' } %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
