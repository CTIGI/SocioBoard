<p id="notice"><%= notice %></p>
<div class="container overflow-visible">
  <div class="tile">
    <div class="t-header th-alt bg-teal">
      <div class="th-title">
        <span class="tile-text"><%= t("views.units.list_units")%></span>
      </div>
    </div>
    <table class="table table-stripped">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.unit.name") %></th>
          <th><%= t("activerecord.attributes.unit.min_age") %></th>
          <th><%= t("activerecord.attributes.unit.max_age") %></th>
          <th><%= t("activerecord.attributes.unit.created_at") %></th>
          <th><%= t("activerecord.attributes.unit.updated_at") %></th>
          <th><%= t("activerecord.attributes.unit.measure_unit_type") %></th>
          <th><%= t("views.general.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @units.each do |unit| %>
        <tr>
          <td><%= unit.name %></td>
          <td><%= unit.min_age %></td>
          <td><%= unit.max_age %></td>
          <td><%= l(unit.created_at, format: :short) %></td>
          <td><%= l(unit.updated_at, format: :short) %></td>
          <td><%= translate_measure_unit_type(unit.measure_unit_type) %></td>
          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-success dropdown-toggle"  data-toggle="dropdown" aria-expanded="false">
                <%= fa_icon("ellipsis-h") %>
              </button>
              <ul class="dropdown-menu dropdown-menu-right" data-placement="left" role="menu">
                <li>
                <%= link_to "#", class: "btn-edit-object", data: { link: edit_unit_path(unit) } do %>
                  <%= fa_icon("pencil-square-o") %>
                  <%= t("link.edit") %>
                <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<%= render partial: "layouts/skinny_modal" %>
