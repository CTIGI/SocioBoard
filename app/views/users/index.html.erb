<p id="notice"><%= notice %></p>
<div class="container overflow-visible">
  <div class="tile">
    <div class="t-header th-alt bg-teal">
      <div class="th-title">
        <span class="tile-text"><%= t("views.users.list_users")%></span>
      </div>
    </div>

    <table class="table table-stripped">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.user.email") %></th>
          <th><%= t("activerecord.attributes.user.roles") %></th>
          <th><%= t("activerecord.attributes.user.created_at") %></th>
          <th><%= t("activerecord.attributes.user.updated_at") %></th>
          <th><%= t("views.general.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.email, user_path(user) %></td>
          <td><%= user.roles.map(&:name) %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-success dropdown-toggle"  data-toggle="dropdown" aria-expanded="false">
                <%= fa_icon("ellipsis-h") %>
              </button>
              <ul class="dropdown-menu dropdown-menu-right" data-placement="left" role="menu">
                <li>
                  <%= link_to t("link.edit"), edit_user_path(user) %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
